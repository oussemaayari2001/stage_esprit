{% if pageCount > 1 %}
<nav class="pagination-container">
    {% set classAlign = (align is not defined) ? '' : align=='center' ? ' justify-content-center' : (align=='right' ? ' justify-content-end' : '') %}
    {% set classSize = (size is not defined) ? '' : size=='large' ? ' pagination-lg' : (size=='small' ? ' pagination-sm' : '') %}
    <ul class="pagination{{ classAlign }}{{ classSize }}">
        {% if previous is defined %}
            <li class="page-item">
                <a class="page-link text-dark" rel="prev" href="{{ path(route, query|merge({(pageParameterName): previous})) }}">&laquo;&nbsp;{{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}</a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">&laquo;&nbsp;{{ 'label_previous'|trans({}, 'KnpPaginatorBundle') }}</span>
            </li>
        {% endif %}

        {% if startPage > 1 %}
            <li class="page-item">
                <a class="page-link page-number{% if current == 1 %} active{% endif %}" href="{{ path(route, query|merge({(pageParameterName): 1})) }}">1</a>
            </li>
            {% if startPage == 3 %}
                <li class="page-item">
                    <a class="page-link page-number{% if current == 2 %} active{% endif %}" href="{{ path(route, query|merge({(pageParameterName): 2})) }}">2</a>
                </li>
            {% elseif startPage != 2 %}
                <li class="page-item disabled">
                    <span class="page-link">&hellip;</span>
                </li>
            {% endif %}
        {% endif %}

        {% for page in pagesInRange %}
            {% if page != current %}
                <li class="page-item">
                    <a class="page-link page-number" href="{{ path(route, query|merge({(pageParameterName): page})) }}">{{ page }}</a>
                </li>
            {% else %}
                <li class="page-item active">
                    <span class="page-link">{{ page }}</span>
                </li>
            {% endif %}
        {% endfor %}

        {% if pageCount > endPage %}
            {% if pageCount > (endPage + 1) %}
                {% if pageCount > (endPage + 2) %}
                    <li class="page-item disabled">
                        <span class="page-link">&hellip;</span>
                    </li>
                {% else %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): (pageCount - 1)})) }}">{{ pageCount -1 }}</a>
                    </li>
                {% endif %}
            {% endif %}
            <li class="page-item">
                <a class="page-link" href="{{ path(route, query|merge({(pageParameterName): pageCount})) }}">{{ pageCount }}</a>
            </li>
        {% endif %}

        {% if next is defined %}
            <li class="page-item">
                <a class="page-link text-dark" rel="next" href="{{ path(route, query|merge({(pageParameterName): next})) }}">{{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}&nbsp;&raquo;</a>
            </li>
        {% else %}
            <li class="page-item disabled">
                <span class="page-link">{{ 'label_next'|trans({}, 'KnpPaginatorBundle') }}&nbsp;&raquo;</span>
            </li>
        {% endif %}
    </ul>
</nav>

<script>
document.querySelectorAll('.page-number').forEach(function(link) {
    link.addEventListener('click', function(event) {
        event.preventDefault();
        // Supprimer la classe active de tous les liens de page
        document.querySelectorAll('.page-number').forEach(function(link) {
            link.classList.remove('active');
        });
        // Ajouter la classe active au lien de page cliqué
        this.classList.add('active');
        // Naviguer vers la page correspondante
        window.location.href = this.getAttribute('href');
    });
});
</script>
{% endif %}

<style>
.pagination .page-item.active .page-link {
    color: black;
    background-color: #BB0000;
    border-color: #BB0000;
}
.pagination .page-item .page-link:hover {
    color: black;
    background-color: #BB0000;
    border-color: #BB0000;
}
.pagination .page-item.disabled .page-link {
    color: black; /* Couleur grise par défaut pour les éléments désactivés */
    background-color: #fff;
    border-color: #dee2e6;
}
</style>