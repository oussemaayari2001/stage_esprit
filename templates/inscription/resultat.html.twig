{% block body %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Carte Étudiant</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
        }
        .student-card {
            width: 80%;
            max-width: 900px;
            border: 2px solid #c91518;
            border-radius: 10px;
            padding: 20px;
            display: flex;
            flex-direction: row;
            align-items: flex-start;
            background-color: #ffffff;
            margin: 0 auto;
        }
        .university-logo {
            margin-right: 20px;
        }
        .university-logo img {
            height: 100px;
            display: block;
        }
        .student-photo {
            flex: 1;
            margin-right: 20px;
            text-align: center;
        }
        .student-photo img {
            width: 120px;
            height: 150px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
        .student-info {
            flex: 2;
        }
        .student-info h3 {
            font-size: 20px;
            margin: 0 0 15px 0;
            color: #004aad;
        }
        .student-info p {
            font-size: 14px;
            margin: 5px 0;
            color: #333;
        }
        .student-info strong {
            color: #c91518;
        }
    </style>
</head>
<body>
    <div class="student-card">
        <div class="university-logo">
            <img src="{{ logoBase64 }}" alt="Logo Université">
        </div>
        <div class="student-photo">
            {% if inscription.etudiant.photo is not null %}
                <img src="data:image/jpeg;base64,{{ inscription.etudiant.photo.getPhotosId() }}" alt="Photo Étudiant">
            {% else %}
                <img src="{{ autreBase64 }}" alt="Photo Étudiant">
            {% endif %}
        </div>
        <div class="student-info">
            <h3>Attestation d'inscription</h3>
            <p><strong>Nom:</strong> {{ inscription.etudiant.getNomEt() }} <strong>Prénom:</strong> {{ inscription.etudiant.getPnomEt() }}</p>
            <p><strong>Téléphone:</strong> {{ inscription.etudiant.getTelEt() }}</p>
            <p><strong>ID Étudiant:</strong> {{ inscription.id }}</p>
            <p><strong>Moyenne Semestre 1:</strong> {{ inscription.getMoySem1() }}</p>
            <p><strong>Moyenne Semestre 2:</strong> {{ inscription.getMoySem2() }}</p>
            <p><strong>Moyenne Générale:</strong> {{ inscription.getMoyGeneral() }}</p>
            <p><strong>Résultat:</strong> {{ inscription.getResultat() }}</p>
        </div>
    </div>
</body>
</html>
{% endblock %}
