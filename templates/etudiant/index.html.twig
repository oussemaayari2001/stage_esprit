        .content {
            width: 100%;
        }

        .form-row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 1rem;
        }

        .form-control {
            margin-bottom: 1rem;
            padding: 10px;
        }

        .invalid-feedback {
            color: #dc3545;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }

        .btn {
            padding: 10px 20px;
            font-size: 1rem;
        }

        .sidebar-link {
            text-decoration: none;
        }

        .progress {
            height: 20px;
            background-color: #fff;
            border-radius: 5px;
        }

        .progress-bar {
            background-color: #dc3545;
            transition: width 0.6s ease;
        }
