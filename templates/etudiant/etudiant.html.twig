   /* Tableau */
   table {

     border-collapse: collapse;
     width: 100%;
     margin-bottom: 20px;
     margin-top: 15px;
     
   }

   th, td {
     border: 1px solid var(--gris);
     padding: 10px;
     text-align: left;
   }

   th {
     background-color: var(--rouge);
     color: var(--blanc);
     font-weight: bold;
   }

   /* Alternance de lignes */
   tr:nth-child(even) {
     background-color: #f2f2f2;
