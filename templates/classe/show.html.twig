{% extends 'dashboard/index.html.twig' %}
   

{% block title %}Classe{% endblock %}

{% block body %}
      <h1 style="color: white !important;">Classe</h1>
    <br>
<div class="container">
    <div class="row">
        <div class="col-lg-10">
                 <table class="table" style="background-color: #fefaf0 !important; border-radius:10px;">
        <tbody>
            <tr>
                <th>Libelle_cl</th>
                <td>{{ classe.libelleCl }}</td>
            </tr>
            <tr>
                <th>Description_cl</th>
                <td>{{ classe.descriptionCl }}</td>
            </tr>
            <tr>
                <th>Date_cr</th>
                <td>{{ classe.dateCr ? classe.dateCr|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_dern_modif</th>
                <td>{{ classe.dateDernModif ? classe.dateDernModif|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Salle_principale</th>
                <td>{{ classe.sallePrincipale }}</td>
            </tr>
            <tr>
                <th>Salle_secondaire_1</th>
                <td>{{ classe.salleSecondaire1 }}</td>
            </tr>
            <tr>
                <th>Salle_secondaire_2</th>
                <td>{{ classe.salleSecondaire2 }}</td>
            </tr>
            <tr>
                <th>Niveau_access</th>
                <td>{{ classe.niveauAccees }}</td>
            </tr>
            <tr>
                <th>Filiere</th>
                <td>{{ classe.filiere }}</td>
            </tr>
            <tr>
                <th>Annee_scolaire</th>
                <td>{{ classe.anneeScolaire }}</td>
            </tr>
             <tr>
                <th>Code cl</th>
                <td>{{ classe.getCodeCl() }}</td>
            </tr>

             <tr>
                <th>Categorie</th>
                <td>{{ classe.catergorie.value }}</td>
            </tr>
        </tbody>
    </table>
        </div>
         <div class="col-lg-2">
            <ul class="list-group" style="background-color: #fefaf0 !important; border-radius:10px;" >
                <li class="list-group-item " style="background-color: #fefaf0 !important; border-radius:10px;">
                 <h5  style="color: #890115 !important;">Traitement liste</h5>
                </li>
                 <li class="list-group-item " style="background-color: #fefaf0 !important; border-radius:10px;">
                <a href="{{ path('app_classe_edit', {'id': classe.id}) }}" class="btn btn-secondary">Modifier</a>
                </li>
                <li class="list-group-item " style="background-color: #fefaf0 !important; border-radius:10px;">
                 <a href="{{ path('app_classe_index') }}" class="btn btn-secondary">Retour</a>
                </li>
                <li class="list-group-item " style="background-color: #fefaf0 !important; border-radius:10px;">
                  
    {{ include('classe/_delete_form.html.twig') }}
                </li> 
            </ul>
        </div>
    </div>
</div>
   
{% endblock %}
