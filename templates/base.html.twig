<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="wrappixel, admin dashboard, html css dashboard, web dashboard, bootstrap 5 admin, bootstrap 5, css3 dashboard, bootstrap 5 dashboard, Ample lite admin bootstrap 5 dashboard, frontend, responsive bootstrap 5 admin template, Ample admin lite dashboard bootstrap 5 dashboard template">
    <meta name="description" content="Ample Admin Lite is powerful and clean admin dashboard template, inpired from Bootstrap Framework">
    <meta name="robots" content="noindex,nofollow">
    <title>Login</title>
    <link rel="canonical" href="https://www.wrappixel.com/templates/ample-admin-lite/" />
    <link rel="icon" type="image/png" sizes="16x16" href="espritng.png">
    <link href="plugins/bower_components/chartist/dist/chartist.min.css" rel="stylesheet">
    <link rel="stylesheet" href="plugins/bower_components/chartist-plugin-tooltips/dist/chartist-plugin-tooltip.css">
    <link href="css/style.min.css" rel="stylesheet">

    <style>
        .page-content--bge5 {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: #f5f5f5; 
        }

        .login-content {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
            margin-left: 500px;
        }

        .login-logo img {
            max-width: 100%;
        }

        .au-btn--block {
            margin-top: 10%;
            background-color: #cf0039;
            border: none;
            font-size: larger;
            width: 200px;
            margin-left: 20%;
            color: white;
        }

        .au-btn--block:hover {
            background-color: darkred;
        }

        .au-input--full {
            background-color: #cf0039;
            margin-left: 10%;
            border: 1px solid white;
            color: black;
            width: 300px;
        }

        .au-input--full::placeholder {
            color: white;
        }
    </style>
</head>

<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <img src="espritng.png" alt="Esprit">
                            <span style="font-weight:bold; color:red; font-size:20px;">Scolarité</span>
                        </div>
                        <div class="login-form">
                            <form action="" method="post">
                                <div class="form-group">
                                    <label style="font-weight:bold;">Utilisateur :</label><br>
                                    <input class="au-input au-input--full" type="text" name="utilisateur" placeholder="utilisateur">
                                </div>
                                <div class="form-group">
                                    <label style="font-weight:bold;">Mot de passe :</label><br>
                                    <input class="au-input au-input--full" type="password" name="mot_de_passe" placeholder="mot de passe">
                                </div>
                                <button class="au-btn au-btn--block m-b-20" type="submit">Se connecter</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="plugins/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/app-style-switcher.js"></script>
    <script src="plugins/bower_components/jquery-sparkline/jquery.sparkline.min.js"></script>
    <script src="js/waves.js"></script>
    <script src="js/sidebarmenu.js"></script>
    <script src="js/custom.js"></script>
    <script src="plugins/bower_components/chartist/dist/chartist.min.js"></script>
    <script src="plugins/bower_components/chartist-plugin-tooltips/dist/chartist-plugin-tooltip.min.js"></script>
    <script src="js/pages/dashboards/dashboard1.js"></script>
</body>

</html>

{% block title %}Classe tri{% endblock %}

{% block body %}
    <h1>Classe tri</h1>

    <table>
        <thead>
            <tr>
                <th><a href="{{ path('app_classe_index', { sortField: 'code_cl', sortOrder: app.request.get('sortOrder') == 'asc' ? 'desc' : 'asc' }) }}">Code</a></th>
                <th><a href="{{ path('app_classe_index', { sortField: 'libelle_cl', sortOrder: app.request.get('sortOrder') == 'asc' ? 'desc' : 'asc' }) }}">Libelle</a></th>
                <th><a href="{{ path('app_classe_index', { sortField: 'description_cl', sortOrder: app.request.get('sortOrder') == 'asc' ? 'desc' : 'asc' }) }}">Description</a></th>
                <th><a href="{{ path('app_classe_index', { sortField: 'date_cr', sortOrder: app.request.get('sortOrder') == 'asc' ? 'desc' : 'asc' }) }}">Date de Création</a></th>
            </tr>
        </thead>
        <tbody>
            {% for classe in classes %}
                <tr>
                    <td>{{ classe.codeCl }}</td>
                    <td>{{ classe.libelleCl }}</td>
                    <td>{{ classe.descriptionCl }}</td>
                    <td>{{ classe.dateCr ? classe.dateCr|date('Y-m-d') : '' }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    {{ form_start(form) }}
        {{ form_row(form.code_cl) }}
        {{ form_row(form.libelle_cl) }}
        {{ form_row(form.description_cl) }}
        {{ form_row(form.date_cr) }}
        {{ form_row(form.salle_principale) }}
        {{ form_row(form.niveau_access) }}
        {{ form_row(form.filiere) }}
        {{ form_row(form.annee_scolaire) }}
        <button class="btn">Search</button>
    {{ form_end(form) }}

    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Libellé</th>
                <th>Description</th>
                <th>Date de Création</th>
                <th>Salle Principale</th>
                <th>Niveau d'Accès</th>
                <th>Filière</th>
                <th>Année Scolaire</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for classe in classes %}
                <tr>
                    <td>{{ classe.code_cl }}</td>
                    <td>{{ classe.libelle_cl }}</td>
                    <td>{{ classe.description_cl }}</td>
                    <td>{{ classe.date_cr ? classe.date_cr|date('Y-m-d') : '' }}</td>
                    <td>{{ classe.salle_principale }}</td>
                    <td>{{ classe.niveau_access }}</td>
                    <td>{{ classe.filiere }}</td>
                    <td>{{ classe.annee_scolaire }}</td>
                    <td>
                        <a href="{{ path('app_classe_show', {'code_cl': classe.code_cl}) }}">show</a>
                        <a href="{{ path('app_classe_edit', {'code_cl': classe.code_cl}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">No results found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_classe_new') }}">Create new</a>
{% endblock %}
